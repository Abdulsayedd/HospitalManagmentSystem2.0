@model IEnumerable<HospitalManagmentSystem2._0.Models.Appointment>

@{
    ViewBag.Title = "ListAppointmentsPharmacist";
}

<h2>All Current Appointments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPatient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDoctor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medicine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPatient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdDoctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medicine)
        </td>
        <td>
            @Html.ActionLink("Check For Medicine", "ListMedicinesPharmacist2", new { id = item.IdAppointment, parameterValue = item.Medicine })
        </td>
    </tr>
}

</table>
