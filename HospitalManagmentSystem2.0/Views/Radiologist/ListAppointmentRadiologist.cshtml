<link href="@Url.Content("/Content/Style.css")" rel="stylesheet" type="text/css" />

@model IEnumerable<HospitalManagmentSystem2._0.Models.Appointment>

@{
    ViewBag.Title = "ListAppointmentRadiologist";
}

<h2>ListAppointmentRadiologist</h2>

<table class="table">
    <tr>
        <th>
            Appointment ID
        </th>
        <th>
            Image ID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAppointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imaging)
            </td>
            <td>
                @Html.ActionLink("Add Image", "RecordImaging", new { id = item.IdAppointment })
            </td>
        </tr>
    }

</table>
